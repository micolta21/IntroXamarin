<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="Black"
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntroXamarin.App.Views.Forms.CalculatorPage">

    <ContentPage.Content>
        <ScrollView HorizontalOptions="Center"
                    VerticalOptions="Center">

            <StackLayout Margin="20,32"
                         Spacing="0">

                <StackLayout
                    Orientation="Vertical" HorizontalOptions="EndAndExpand" Margin="20,0" VerticalOptions="CenterAndExpand">
                    <Label x:Name="PantallaResultado" HorizontalOptions="EndAndExpand" Text="0" TextColor="White" FontSize="50"/>
                </StackLayout>

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Text="C" CornerRadius="100" TextColor="Red" x:Name="Limpiar" Clicked="btn_limpiar"/>
                    <Button Grid.Row="0" Grid.Column="1" Text="√" CornerRadius="100" TextColor="Green" x:Name="RaizCuadrada" Clicked="btn_Cliked"/>
                    <Button Grid.Row="0" Grid.Column="2" Text="%" CornerRadius="100" TextColor="Green" x:Name="Porciento" Clicked="btn_Cliked"/>
                    <Button Grid.Row="0" Grid.Column="3" Text="÷" CornerRadius="100" TextColor="Green" x:Name="Division" Clicked="btn_Cliked"/>

                    <Button Grid.Row="1" Grid.Column="0" CornerRadius="100" Text="1" x:Name="Uno" Clicked="btn_Cliked"/>
                    <Button Grid.Row="1" Grid.Column="1" CornerRadius="100" Text="2" x:Name="Dos" Clicked="btn_Cliked"/>
                    <Button Grid.Row="1" Grid.Column="2" CornerRadius="100" Text="3" x:Name="Tres" Clicked="btn_Cliked"/>
                    <Button Grid.Row="1" Grid.Column="3" CornerRadius="100" Text="X" TextColor="Green" x:Name="Multiplicacion" Clicked="btn_Cliked"/>

                    <Button Grid.Row="2" Grid.Column="0" CornerRadius="100" Text="4" x:Name="Cuatro" Clicked="btn_Cliked"/>
                    <Button Grid.Row="2" Grid.Column="1" CornerRadius="100" Text="5" x:Name="Cinco" Clicked="btn_Cliked"/>
                    <Button Grid.Row="2" Grid.Column="2" CornerRadius="100" Text="6" x:Name="Seis" Clicked="btn_Cliked"/>
                    <Button Grid.Row="2" Grid.Column="3" CornerRadius="100" Text="-" TextColor="Green" x:Name="Menos" Clicked="btn_Cliked"/>

                    <Button Grid.Row="3" Grid.Column="0" CornerRadius="100" Text="7" x:Name="Siete" Clicked="btn_Cliked"/>
                    <Button Grid.Row="3" Grid.Column="1" CornerRadius="100" Text="8" x:Name="Ocho" Clicked="btn_Cliked"/>
                    <Button Grid.Row="3" Grid.Column="2" CornerRadius="100" Text="9" x:Name="Nueve" Clicked="btn_Cliked"/>
                    <Button Grid.Row="3" Grid.Column="3" CornerRadius="100" Text="+" TextColor="Green" x:Name="Mas" Clicked="btn_Cliked"/>

                    <Button Grid.Row="4" Grid.Column="0" CornerRadius="100" Text="+/-" x:Name="MasMenos" Clicked="btn_Cliked"/>
                    <Button Grid.Row="4" Grid.Column="1" CornerRadius="100" Text="0" x:Name="Cero" Clicked="btn_Cliked"/>
                    <Button Grid.Row="4" Grid.Column="2" CornerRadius="100" Text="." x:Name="Punto" Clicked="btn_Cliked"/>
                    <Button Grid.Row="4" Grid.Column="3" CornerRadius="100" Text="=" TextColor="White" BackgroundColor="Green" x:Name="Igual" 
                            Clicked="Igual_Clicked"/>

                </Grid>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage> 